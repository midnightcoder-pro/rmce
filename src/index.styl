
@import url('https://fonts.googleapis.com/css?family=Roboto+Mono:400,400i,700,700i')

.code-editor
	background-color: #363636
	color: #eee
	display: block
	caret-color: #eee
	border-radius: 4px

	/* Fix text bluring during ripple animation */
	backface-visibility: hidden

	overflow: auto
	padding: 1em
	box-sizing: border-box
	white-space: pre
	font-size: 15px
	font-family: Roboto Mono, monospace
	tab-size: 2

	line-height: 1.5

	outline: none

	&::selection,
	::selection
		background: rgba(255, 255, 255, 0.1)

	.namespace
		opacity: 0.7

/*
 * Material Darker theme for PrismJS
 *
 * @author Oleg Dutchenko
 * @license MIT 2018
 */

	.atrule,
	.constant,
	.function,
	.important,
	.boolean,
	.keyword,
	.symbol,
	.id
		color: #c792ea

	.attr-name,
	.builtin,
	.class
		color: #ffcb6b

	.comment,
	.doctype,
	.prolog
		color: #616161

	.inserted,
	.property,
	.cdata,
	.char
		color: #80cbc4

	.operator,
	.punctuation
		color: #89ddff

	.class-name,
	.hexcode,
	.regex
		color: #f2ff00

	.attr-value,
	.attribute,
	.pseudo-class,
	.pseudo-element,
	.string
		color: #a5e844

	.number,
	.unit
		color: #fd9170

	.selector,
	.variable,
	.deleted,
	.entity,
	.tag,
	.url
		color: #ff6666

	.important,
	.id
		font-weight: bold